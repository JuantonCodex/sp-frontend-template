include ../1_config/config.jade
doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title #{site_title}
    meta(name="description", content="#{site_description}")
    meta(name="author", content="#{site_author}")
    
    //- Archivos CSS
    block _css-files_
  body
    .l-OuterContainer
      include ../4_components/c-customer-company.jade
      include ./header.jade
      
      //- Contenido variable
      block _main-content_
      
      include ./footer.jade
      
    //- Archivos Javascript
    
    //Vendor files

    //- jQuery Library
    script(src='js/vendor/jquery.min.js')
    
    //- Validate input format
    script(src='js/vendor/jquery.mask.min.js')

    //- jQuery scroll plugin
    script(src='js/vendor/iscroll.js')

    //- Underscore methods
    script(src='js/vendor/underscore.min.js')
    
    //- Jquery carousel plugin
    script(src='js/vendor/slick.min.js')
    
    block _js-vendor-files_
    
    //Scripts
    script(src="js/components/mybank-search.js")
    script(src="js/components/places-of-payment.js")
    script(src="js/components/payment-ticket.js")
    script(src="js/app.js")
    block _js-files_
